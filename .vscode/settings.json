{
  // ===== FORMATAÇÃO GERAL =====
  "editor.formatOnSave": false,
  "editor.formatOnPaste": false,
  "editor.formatOnType": false,

  // Respeitar .editorconfig
  "editorconfig.enable": true,

  // ===== PHP =====
  "[php]": {
    "editor.defaultFormatter": null,
    "editor.formatOnSave": false,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false
  },

  // ===== VUE =====
  "[vue]": {
    "editor.defaultFormatter": null,
    "editor.formatOnSave": false,
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false
  },

  // ===== JAVASCRIPT =====
  "[javascript]": {
    "editor.defaultFormatter": null,
    "editor.formatOnSave": false,
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false
  },

  // ===== HTML =====
  "[html]": {
    "editor.defaultFormatter": null,
    "editor.formatOnSave": false,
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false
  },

  // ===== CSS/SCSS =====
  "[css]": {
    "editor.defaultFormatter": null,
    "editor.formatOnSave": false,
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },

  "[scss]": {
    "editor.defaultFormatter": null,
    "editor.formatOnSave": false,
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },

  // ===== BLADE (Laravel) =====
  "[blade]": {
    "editor.defaultFormatter": null,
    "editor.formatOnSave": false,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false
  },

  // Desabilitar Prettier completamente
  "prettier.enable": false,

  // Desabilitar Blade Formatter automático
  "bladeFormatter.format.enabled": false,

  // Configurações de espaços e tabs
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.trimAutoWhitespace": true,

  // Manter EditorConfig como prioridade
  "files.associations": {
    "*.php": "php",
    "*.blade.php": "blade"
  }
}
